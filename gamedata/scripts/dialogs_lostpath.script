	local item_sections = {"ammo_pkm_100"} 
	local needed = 3
	local count = 0 
	local item_section 
	local function calc(temp, item) 
	
	if item:section() == item_section then 
		count = count + 1 
	end 
	
	end 
	
	for k,v in pairs(item_sections) do 
		item_section = v 
		get_story_object("actor"):iterate_inventory(calc, actor) 
	end 
	
	return count >= needed 
end 

