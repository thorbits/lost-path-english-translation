-- Проверки на наличие необходимой репутации
function prec(value)
	if (db.actor:community_goodwill("isg") >= value) then
		return true
	else
		return false
	end
end

function prec_isg_gauss()
	return prec(1000)
end

function prec_isg_val()
	return prec(600)
end

function prec_isg_groza()
	return prec(850)
end

function prec_isg_vss()
	return prec(750)
end

function prec_isg_baloon()
