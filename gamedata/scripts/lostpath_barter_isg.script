-- Оповещения на ПДА
-- Звуковой сигнал
function goodwill_to_isg_gauss()
	xr_effects.inc_faction_goodwill_to_actor(db.actor, nil, {"isg", -1000}) 
	local t = db.actor:community_goodwill("isg")
	news_manager.send_tip(db.actor, "%c[255,255,160,0]Reputation Exchange:\\n%c[255,160,160,160]Received item: <Гаусс> Spent reputation: [1000]", nil, nil, nil, nil)
	xr_sound.set_sound_play(db.actor:id(), "pda_news")
end

