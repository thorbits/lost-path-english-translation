-- Оповещения на ПДА
-- Звуковой сигнал
function goodwill_to_killer_sig550()
	xr_effects.inc_faction_goodwill_to_actor(db.actor, nil, {"killer", -300}) 
	local t = db.actor:community_goodwill("killer")
	news_manager.send_tip(db.actor, "%c[255,255,160,0]Reputation Exchange:\\n%c[255,160,160,160]Received item: <Sig 550> Spent reputation: [300]", nil, nil, nil, nil)
	xr_sound.set_sound_play(db.actor:id(), "pda_news")
end

