-- Проверки на наличие необходимой репутации
function prec(value)
	if (db.actor:community_goodwill("killer") >= value) then
		return true
	else
		return false
	end
end

function prec_killer_sig550()
	return prec(300)
end

function prec_killer_g36()
	return prec(600)
end

function prec_killer_scar()
